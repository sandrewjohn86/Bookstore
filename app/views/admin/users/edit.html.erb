<h2>Edit User</h2>

<%= form_for [:admin, @user] do |f| %>
	<!-- check for errors -->
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |msg| %>
			<!-- Show errors -->
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>

	<div class="form-group">
		<%= f.label :name %><br/>
		<%= f.text_field :name, class: 'form-control' %><br/>
	</div>

	<div class="form-group">
		<%= f.label :email %><br/>
		<%= f.text_field :email, class: 'form-control' %><br/>
	</div>

	<div class="form-group">
		<%= f.label :new_password %><br/>
		<%= f.password_field :password, class: 'form-control' %><br/>
	</div>

	<div class="form-group">
		<%= f.label :new_password_confirmation %><br/>
		<%= f.password_field :password_confirmation, class: 'form-control' %><br/>
	</div>

	<%= f.submit "Submit", class: 'btn btn-primary' %>
	<%= link_to "Cancel", admin_users_path, class: 'btn btn-default' %>
<% end %>
