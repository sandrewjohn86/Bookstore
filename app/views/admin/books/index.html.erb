<h2>Books <%= link_to "Create New", new_admin_book_path, class: 'btn btn-success pull-right' %></h2>
<% if @books.exists? %>
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Year</th>
      <th></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Edit', edit_admin_book_path(book.id) %> | <%= link_to 'Delete', admin_book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @books %>
<% else %>
  <p>There are no books</p>
<% end %>