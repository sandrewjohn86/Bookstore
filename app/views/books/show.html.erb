<div id="books-show">
	<h3><%= @book.title %></h3>
	<div class="books-show-left">
		<%= image_tag @book.image.url, width:'100%' %>
	</div>

	<div class="books-show-right col-md-3 col-sm-3">
		<h4>Book Info:</h4>
		<ul>
			<li><strong>Category: </strong> <%= @book.category.name %></li>
			<li><strong>Author: </strong> <%= @book.author.first_name %> <%= @book.author.last_name %></li>
			<li><strong>Publisher: </strong> <%= @book.publisher.name %></li>
			<li><strong>Year: </strong> <%= @book.year %></li>
			<li><strong>ISBN: </strong> <%= @book.isbn %></li>
			<li><strong>Format: </strong> <%= @book.format %></li>
			<li><strong>Pages: </strong> <%= @book.pages %></li>
		</ul>
		<%= link_to "Buy For: " + @book.price, @book.buy, class: 'btn btn-success', target:'_blank' %>
	</div>

	<div class="clearfix"></div>

	<h4>Excerpt</h4>
	<p><%= @book.excerpt %></p>
</div>
